---
import Layout from '../layouts/Layout.astro';
import CartButton from '../components/CartButton';
import UserButton from '../components/UserButton';
import { FaHome } from 'react-icons/fa';
---

<Layout>
  <div class="min-h-screen bg-gray-50">
    <div class="fixed top-4 right-4 z-50 flex items-center gap-8">
      <CartButton client:load />
      <UserButton client:load />
    </div>
    <section class="relative h-[40vh] bg-gradient-to-r from-purple-900 to-indigo-900">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="text-white max-w-2xl">
          <div class="flex items-center gap-4 mb-6">
            <a href="/" class="flex items-center gap-2 text-white hover:text-purple-200 transition-colors">
              <FaHome className="w-5 h-5" />
              <span>Inicio</span>
            </a>
            <span class="text-white/50">/</span>
            <span class="text-white/50">Nuevo artículo</span>
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-4">Nuevo artículo</h1>
          <p class="text-xl md:text-2xl">Publica tu propio artículo sobre CRPGs</p>
        </div>
      </div>
    </section>
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="text-center py-12 text-gray-500">
          <span>Próximamente: aquí podrás crear y publicar artículos.</span>
        </div>
      </div>
    </section>
  </div>
</Layout>