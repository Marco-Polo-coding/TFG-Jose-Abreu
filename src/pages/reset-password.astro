---
import Layout from '../layouts/Layout.astro';
import ResetPasswordForm from '../components/ResetPasswordForm';
---

<Layout>
  <div class="min-h-screen bg-gray-50">
    <section class="relative h-[40vh] bg-gradient-to-r from-purple-900 to-indigo-900 overflow-hidden">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="text-white max-w-2xl">
          <h1 class="text-4xl md:text-6xl font-extrabold mb-4 drop-shadow-xl">Restablecer Contraseña</h1>
          <p class="text-xl md:text-2xl font-medium text-gray-200 drop-shadow">Crea una nueva contraseña para tu cuenta</p>
        </div>
      </div>
    </section>
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-xl">
        <ResetPasswordForm client:load />
      </div>
    </section>
  </div>
</Layout> 